#!/bin/bash

function exit_with_error {
    local local_errorcode
    local_errorcode=("$@")
    echo "------------------------------"
    echo ${local_errorcode[*]}
    echo "Exit..."
    exit 0
}

if ! [ -n "$1" ]
    then
        error_code="Please add a filename"
        exit_with_error ${error_code[*]}
fi

if ! [ -f $1 ]
    then
        error_code="NOT FOUND: $1"
        exit_with_error ${error_code[*]}
fi
